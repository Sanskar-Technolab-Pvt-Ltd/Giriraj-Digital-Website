---
import "../assets/css/tab.css";
import Icon from "../assets/images/tab-link-icon.svg";
import Arrow from "../assets/images/button-arrow.svg";
import TicketBookingImage from "../assets/images/ticket-booking-system.webp";
import LensBookingImage from "../assets/images/umbraco-mvp-certification.png";
import LinkButton from "./LinkButton.astro";

const projects = [
    {
        title: "Ticket Booking System",
        description:
        "Custom Solution for Ticket Booking System with Flexible Seating Allotment",
        image: TicketBookingImage,
        Link: "/",
    },
    {
        title: "Ticket Booking System",
        description:
        "Custom Solution for Lens Booking System with Flexible Booking Options",
        image: TicketBookingImage,
        Link: "/",
    },
];
---

<section class="w-full bg-white grid grid-cols-12 gap-5 lg:gap-[30px]">
    <div class="col-span-12 lg:col-start-2 lg:col-span-10 rounded-2xl lg:rounded-[30px] 
            bg-[#E9F2FC] grid grid-cols-1 lg:grid-cols-10 gap-5 lg:gap-[30px] xl:gap-[60px]
            py-5 px-5 lg:pb-0 lg:pt-10 lg:px-10 xl:pt-[70px] xl:px-[70px]">

        <!-- Header -->
        <div class="space-y-2 lg:space-y-5 col-span-10">
            <p class="text-[#0FA1DB] font-semibold lg:text-xl">The Proud Work Unboxed</p>

            <div class="flex flex-col space-y-3.5 lg:space-y-0 lg:flex-row lg:justify-between">
                <h2 class="text-[#212529] text-[26px] lg:text-5xl leading-[120%] font-bold">
                    Solutions Delivered
                </h2>
                <LinkButton Text="View All" Link="/" />
            </div>
        </div>

        <!-- Tabs -->
        <div class="col-span-10 lg:col-span-3 space-y-6 lg:space-y-8 lg:pb-8">
            {projects.map((project, index) => (
                <div
                    class={`tabs-item cursor-pointer rounded-lg lg:p-0 ${index === 0 ? "active" : "opacity-70"}`}
                    data-index={index}
                    data-image={project.image.src}
                >
                    <div class="space-y-3 lg:space-y-[26px]">
                        <div class="space-y-2.5">
                            <div class="flex space-x-2.5 items-center">
                                <p class="text-[#21292C] font-bold lg:text-xl inter">{project.title}</p>
                                <img src={Icon.src} alt="tab-link-icon" class="w-[18px] h-[18px] lg:w-5 lg:h-5" />
                            </div>

                            <p class="text-[#2C363A] inter text-sm lg:text-base font-regular leading-[150%]">
                                {project.description}
                            </p>

                            {/* <div class="tabs-progress w-full h-[3px] bg-[#0FA1DB] mt-4 hidden lg:block"></div> */}
                            <div class="tabs-progress mt-4 hidden lg:block">
                                <div class="progress-bg"></div>
                                <div class="progress-fill"></div>
                            </div>
                        </div>

                        <!-- MOBILE IMAGE ONLY -->
                        <a href={project.Link} class="mt-4 bg-[url('../assets/images/tab-bg.webp')] rounded-xl px-3 pt-3 mobile-image lg:hidden!">
                            <img
                                src={project.image.src}
                                class="rounded-t-xl border-t-3 border-x-3 border-[rgba(255,255,255,0.6)] w-full"
                            />
                        </a>

                        <!-- MOBILE PROGRESS BELOW IMAGE -->
                        {/* <div class="tabs-progress w-full h-[3px] bg-[#0FA1DB] mt-4 lg:hidden"></div> */}
                        <div class="tabs-progress mt-4 lg:hidden">
                            <div class="progress-bg"></div>
                            <div class="progress-fill"></div>
                        </div>
                    </div>
                </div>
            ))}
        </div>

        <!-- Image -->
        <a href={projects[0].Link}
        class="col-span-10 lg:col-span-7 hidden lg:flex bg-[url('../assets/images/tab-bg.webp')] rounded-t-[30px] pt-[30px] px-[30px] lg:pt-[60px] lg:px-[60px] items-center justify-center"
        >
            <img
                id="tab-image"
                src={projects[0].image.src}
                class="rounded-[20px] rounded-b-none border-t-6 border-x-6 border-[rgba(255,255,255,0.6)] transition-all duration-500"
                alt="project image"
            />
        </a>
    </div>
</section>

<script src="../assets/js/tabs.js"></script>