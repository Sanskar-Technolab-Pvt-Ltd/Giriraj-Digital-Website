---
import "../assets/css/tab.css";
import Icon from "../assets/images/tab-link-icon.svg";
import Arrow from "../assets/images/button-arrow.svg";
import TicketBookingImage from "../assets/images/ticket-booking-system.webp";
import LensBookingImage from "../assets/images/umbraco-mvp-certification.png";

const projects = [
    {
        title: "Ticket Booking System",
        description:
        "Custom Solution for Ticket Booking System with Flexible Seating Allotment",
        image: TicketBookingImage,
    },
    {
        title: "Lens Booking System",
        description:
        "Custom Solution for Lens Booking System with Flexible Booking Options",
        image: TicketBookingImage,
    },
];
---

<section class="w-full bg-white grid grid-cols-12 gap-5 lg:gap-[30px]">
    <div class="col-span-12 lg:col-start-2 lg:col-span-10 rounded-[30px] grid grid-cols-10 pt-5 px-5 lg:pt-10 lg:px-10 xl:pt-[70px] xl:px-[70px] bg-[#E9F2FC] gap-5 lg:gap-[30px] xl:gap-[60px]">
        <!-- Header -->
        <div class="space-y-5 col-span-10">
            <p class="text-[#0FA1DB] font-semibold lg:text-xl">
                The Proud Work Unboxed
            </p>
            <div class="flex justify-between">
                <h2 class="text-[#212529] lg:text-5xl leading-[120%] font-bold">
                Solutions Delivered
                </h2>
                <a
                href="/"
                class="h-fit rounded-full text-white flex space-x-2.5 py-2.5 px-6 lg:px-6 w-fit items-center bg-[linear-gradient(90deg,#0FA1DB_0%,#5C2D91_100%)] font-semibold outline-none lg:font-xl"
                >
                <p>View All</p>
                <img src={Arrow.src} alt="explore" />
                </a>
            </div>
        </div>

        <!-- Tabs -->
        <div class="col-span-10 lg:col-span-3 space-y-5 lg:space-y-8 lg:pb-8">
        {
            projects.map((project, index) => (
                <div
                    class={`tabs-item cursor-pointer rounded-lg ${index === 0 ? "active" : "opacity-70"}`}
                    data-index={index} data-image={project.image.src}
                >
                    <div class="space-y-5 lg:space-y-[26px]">
                        <div class="space-y-2.5">
                            <div class="flex space-x-2.5 items-center">
                                <p class="text-[#21292C] font-bold lg:text-xl inter">
                                    {project.title}
                                </p>
                                <img src={Icon.src} alt="tab-link-icon" class="w-5 h-5" />
                            </div>
                            <p class="text-[#2C363A] inter font-regular leading-[150%]">
                            {project.description}
                            </p>
                        </div>
                        <div class="tabs-progress w-full h-[3px] bg-[#0FA1DB]" />
                    </div>
                </div>
            ))
        }
        </div>

        <!-- Image -->
        <div
        class="col-span-10 lg:col-span-7 bg-[url('../assets/images/tab-bg.webp')] rounded-t-[30px] pt-[30px] px-[30px] lg:pt-[60px] lg:px-[60px] flex items-center justify-center"
        >
        <img
            id="tab-image"
            src={projects[0].image.src}
            class="rounded-[20px] rounded-b-none border-t-6 border-x-6 border-[rgba(255,255,255,0.6)] transition-all duration-500"
            alt="project image"
        />
        </div>
    </div>
</section>

<script src="../assets/js/tabs.js" />
