---
const {CardsData, Heading, Title} = Astro.props
import SectionTitle from "./SectionTitle.astro";
import Card from "./Card.astro"
---

<section class="section-container grid grid-cols-12 gap-5 lg:gap-[30px]">
    <div class="col-span-12 lg:col-start-2 lg:col-span-10 space-y-10 ">
        <SectionTitle Title={Title || ""} Heading={Heading || ""} WidthClass="lg:w-[70%]" />

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-[30px] xl:gap-5 2xl:gap-[30px]">
        {CardsData.map((card:any) => (
            <Card
            BgColor = {card.bgColor}
            BgImage={card.bgImage}
            Icon={card.icon}
            Heading={card.heading}
            Paragraph={card.paragraph}
            Link={card.link}
            BorderOutline={card.borderOutline}
            />
        ))}
        </div>
    </div>
</section>