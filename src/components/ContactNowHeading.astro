---
const { Heading = "", MarginNone = false, Image, isImageHidden=false } = Astro.props;
import LinkButton from "./LinkButton.astro";

const sectionClass = `section-container ${MarginNone ? "mt-0!" : ""}`;
const roundedClass = MarginNone ? "rounded-b-[20px]" : "rounded-[20px]";

const hasImage = !!Image;

// background only when image NOT present
const bgClass = hasImage ? "bg-[#E9F2FC]" : "bg-[#E9F2FC] bg-[url('../assets/images/rectangle.svg')] bg-no-repeat bg-[position:calc(100%-10px)_calc(100%-20px)] bg-[length:120px] lg:bg-[length:auto] lg:bg-[position:bottom_0px_right_40px] xl:bg-[position:bottom_0px_right_100px]";

const isHidden = isImageHidden ? 'hidden' : '';
---

<section class={sectionClass}>
    <div class={`${bgClass} ${roundedClass}`}>
        <div class="grid grid-cols-12 gap-5 lg:gap-[30px]">

        <!-- Left Content -->
        <div
            class={`col-span-12 p-5 lg:px-0 lg:py-10 lg:col-start-2 md:col-span-7 xl:col-start-2 xl:col-span-6  space-y-[30px] content-center`}
        >
            <h2 class="text-[#21292C] text-[26px] lg:text-4xl xl:text-5xl leading-[120%] font-bold">
            {Heading}
            </h2>

            <div class="w-fit">
            <LinkButton Text="Connect Now" Link="/contact-us" />
            </div>
        </div>

        <!-- Right Image -->
        {hasImage && (
            <div class={`col-span-12 content-center md:col-span-5 lg:col-start-9 lg:col-span-4 xl:col-span-5 xl:col-start-8  flex items-center justify-center p-5 md:p-0 ${isImageHidden ? "hidden md:block" : ""}`}>
                <img src={Image.src} alt={Heading} class="md:w-full md:h-full lg:w-auto lg:h-auto xl:w-auto xl:h-full self-center" />
            </div>
        )}

        </div>
    </div>
</section>
