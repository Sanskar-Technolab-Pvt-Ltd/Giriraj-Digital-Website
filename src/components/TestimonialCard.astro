---
const {TestimonialImage, Content=[], Name, Designation} = Astro.props;
import TestimonialSays from "../assets/images/testimonial-says.svg"
---

<div class="grid grid-cols-10 gap-5 lg:gap-[30px]">
    <div class="col-span-12 lg:col-span-3 aspect-square p-8 lg:p-[60px] bg-[url('../assets/images/testimonial-bg.webp')] rounded-4xl">
        <img src={TestimonialImage.src} class="border-6 border-[#99BFD8] rounded-[20px] w-[320px] h-80" alt={Name}>
    </div>
    <div class="col-span-12 lg:col-span-7 content-center text-[#2C363A] space-y-2.5 text-xl lg:text-2xl lg:px-5 xl:px-10">
        <div class="space-y-6">
            <img src={TestimonialSays.src} alt="testimonial says">
            {Content.map((text:any) => (
                <p>{text}</p>
            ))}
        </div>
        <div class="space-y-1">
            <p class="font-bold">{Name || ""}</p>
            <p>{Designation || ""}</p>
        </div>
    </div>
</div>