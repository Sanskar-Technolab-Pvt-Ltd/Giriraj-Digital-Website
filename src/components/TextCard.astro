---
const { Icon, Title="", Paragraph=[], LiList=[] } = Astro.props;

---

<div class="p-5 lg:p-[30px] space-y-5 lg:space-y-[30px] outline-3 lg:outline-8 outline-[rgba(0,62,135,0.1)] rounded-[20px]">
    <div class="flex space-x-5 items-center">
        <img src={Icon.src} alt="icon" />
        <h3 class="text-[#21292C] text-[26px] leading-[120%] font-bold">{Title || ""}</h3>
    </div>
    <div class="space-y-5  text-[#2C363A]">
        {Paragraph.map((text:any) => (
            <p class="leading-[150%]">{text}</p>
        ))}

        {
            LiList.length > 0 && (
                <ul class="list-disc list-outside pl-5">
                    {LiList.map((text:any) => (
                        <li class="leading-[150%]">{text}</li>
                    ))}
                </ul>
            )
        }
    </div>
</div>