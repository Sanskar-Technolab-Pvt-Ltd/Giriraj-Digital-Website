---
import SectionTitle from "./SectionTitle.astro"

const {SubTitle="", Title="", Image="", Paragraph=""} = Astro.props

---

<section class="section-container mt-0!">
    <div class="grid grid-cols-12 gap-5 lg:gap-[30px] bg-[#E9F2FC] rounded-2xl">
        <div class="col-span-12 lg:col-start-2 lg:col-span-10 grid grid-cols-10 lg:gap-[30px]">
            <div class="order-2 lg:order-1 p-5 lg:px-0 lg:py-[100px] col-span-10 xl:col-span-4">
                <SectionTitle Title={Title || ""} Heading={SubTitle || ""} Paragraph={Paragraph || ""} />
            </div>

            <div class="col-span-10 xl:col-span-6 order-1 lg:order-2 xl:mt-20 flex bg-[url('../assets/images/tab-bg.webp')] rounded-t-2xl lg:rounded-t-[30px] pt-[30px] px-[30px] lg:pt-[60px] lg:px-[60px] justify-items-center items-center justify-center items-end"
                >
                <img
                    src={Image.src}
                    class="rounded-t-2xl lg:rounded-t-[20px] rounded-b-none border-t-6 border-x-6 border-[rgba(255,255,255,0.6)] transition-all duration-500"
                    alt="project image"
                />
            </div>
        </div>
    </div>
</section>