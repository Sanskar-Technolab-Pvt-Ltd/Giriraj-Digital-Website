<script is:inline>
document.addEventListener("DOMContentLoaded", () => {
const tabs = document.querySelectorAll(".service-tab");
const contents = document.querySelectorAll(".lg\\:block .service-content");

const isMobile = window.innerWidth < 1024;

let currentIndex = 0;
const intervalTime = 5000;
let autoTab = null;

function activateTab(index) {
    const tab = tabs[index];
    const targetId = tab.dataset.target;

    // Reset tabs
    tabs.forEach(t => {
    t.classList.remove("opacity-100");
    t.classList.add("opacity-60");

    const bar = t.querySelector(".progress-bar");
    if (bar) {
        bar.style.transition = "none";
        bar.style.width = "0%";
    }

    // mobile content
    const mobileContent = t.closest(".service-item")?.querySelector(".service-mobile-content");
    mobileContent?.classList.add("hidden");
    });

    // Desktop content
    contents.forEach(c => c.classList.add("hidden"));

    // Activate tab
    tab.classList.remove("opacity-60");
    tab.classList.add("opacity-100");

    if (isMobile) {
    // Show content below tab
    tab.closest(".service-item")
        ?.querySelector(".service-mobile-content")
        ?.classList.remove("hidden");
    } else {
    document.getElementById(targetId)?.classList.remove("hidden");
    }

    // Progress bar (desktop only)
    if (!isMobile) {
    const activeBar = tab.querySelector(".progress-bar");
    if (activeBar) {
        requestAnimationFrame(() => {
        activeBar.style.transition = "width 5s linear";
        activeBar.style.width = "100%";
        });
    }
    }
}

tabs.forEach((tab, i) => {
    tab.addEventListener("click", () => {
    currentIndex = i;
    activateTab(currentIndex);
    resetInterval();
    });
});

function resetInterval() {
    if (isMobile) return;
    clearInterval(autoTab);
    autoTab = setInterval(() => {
    currentIndex = (currentIndex + 1) % tabs.length;
    activateTab(currentIndex);
    }, intervalTime);
}

// Init
activateTab(0);
resetInterval();
});

</script>
