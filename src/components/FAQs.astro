---
const { id, Question, Answer, Border } = Astro.props;
const isOpen = id === 0;   // first one open
---

<div id={`faq-heading-${id}`}>
    <button 
        type="button" 
        class={`faq-btn flex text-left justify-between w-full py-5 font-medium gap-3 lg:gap-5 cursor-pointer
        ${Border ? Border : "border-t border-t-[#D9D9D9]"} border-x-0 outline-none`} 
        data-target={`#faq-body-${id}`}
    >
        <span class="lg:text-xl">{Question}</span>

        <!-- Plus and Minus Icons -->
        <span class={`icon-plus text-2xl text-[#8B8B8B] font-bold ${isOpen ? "hidden" : ""}`}>+</span>
        <span class={`icon-minus text-2xl text-[#8B8B8B] font-bold ${isOpen ? "" : "hidden"}`}>âˆ’</span>
    </button>
</div>

<div 
    id={`faq-body-${id}`} 
    class={`${isOpen ? "" : "hidden"}`}
    aria-labelledby={`faq-heading-${id}`}
>
    <div class="pb-4 md:pb-5">
        <p class="lg:text-lg text-body">
            {Answer}
        </p>
    </div>
</div>
