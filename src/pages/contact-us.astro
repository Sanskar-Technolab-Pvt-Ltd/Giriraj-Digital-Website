---

<Layout Title="Contact Us | GIRIRAJ DIGITAL" hideFooterLocation={true}>
    <HeroSection Padding={true} SubTitle="Let's Connect" Title="Contact Us" Paragraph="Fill up the form and our Team will get back to you as soon as possible." />

    <!-- * TO DISCUSS HOW WE CAN HELP YOU! -->
    <section class="section-container mt-0!">
        <div class="rounded-xl lg:rounded-2xl lg:bg-[url('../assets/images/fuel-of-success-bg.webp')] lg:py-[100px] bg-cover grid grid-cols-12 gap-y-5 lg:gap-[30px]">
            <div class="col-span-12 lg:col-start-2 xl:col-span-5 lg:p-10 space-y-5">
                <p class="text-[#0FA1DB] font-semibold lg:text-xl">Let's Talk About Your Needs</p>
                <div class="space-y-2.5">
                    <h2 class="text-[#21292C] text-[26px] lg:text-5xl leading-[120%] font-bold">TO DISCUSS HOW WE CAN HELP YOU!</h2>
                    <div class="text-[#0D0D0D] space-y-3 lg:text-lg">
                        <p>Want some assistance regarding your business? Our veteran consultants know their job and would love to hear from you! Our team is available throughout the working week.</p>
                        <p>Alternatively, we would love to hear from you at</p>
                    </div>
                </div>
                <div>
                    <a href="mailto:info@girirajdigital.com" class=" relative h-fit w-fit rounded-full text-white flex items-center space-x-2.5 py-2 lg:py-3 px-3.5 lg:px-6 font-semibold overflow-hidden bg-[linear-gradient(90deg,#0FA1DB,#5C2D91,#0FA1DB)] bg-size-[200%_200%] bg-left transition-[background-position] duration-500 ease-in-out hover:bg-right cursor-pointer lg:text-xl">info@girirajdigital.com </a>
                </div>
            </div>

            <div class="col-span-12 lg:col-start-2 lg:col-span-10 xl:col-start-7 xl:col-span-5 lg:p-10 space-y-5 rounded-[20px] outline-3 lg:outline-8 outline-[rgba(255,255,255,0.6)] bg-white">
                <h2 class="text-[#21292C] text-[26px] lg:text-[36px] leading-[120%] font-bold">Get in Touch</h2>
                <form action="" class="space-y-3">
                    <input type="text" name="first_name" class="w-full border border-[#CCCCCC] outline-none text-[#0D0D0D] px-3 py-2" placeholder="First Name *" required />
                    <input type="text" name="last_name" class="w-full border border-[#CCCCCC] outline-none text-[#0D0D0D] px-3 py-2" placeholder="Last Name" />
                    <input type="email" name="email" class="w-full border border-[#CCCCCC] outline-none text-[#0D0D0D] px-3 py-2" placeholder="Email *" required />
                    <input type="tel" name="phone_number" class="w-full border border-[#CCCCCC] outline-none text-[#0D0D0D] px-3 py-2" placeholder="Phone Number" />

                    <div>
                        <label class="w-full px-3 py-2 border border-[#CCCCCC] cursor-pointer flex items-center space-x-5 ">
                        <span class="text-gray-500">Choose files</span>
                        <span id="file-name" class="text-[#0D0D0D]">No File Chosen</span>
                        <input
                            type="file"
                            id="file-input"
                            name="file"
                            class="hidden"
                        />
                        </label>
                    </div>


                    <input type="text" name="message" class="w-full border border-[#CCCCCC] outline-none text-[#0D0D0D] px-3 py-2" placeholder="Message" />
                </form>

                <button class="relative h-fit w-fit rounded-full text-white flex items-center space-x-2.5 py-2 lg:py-3 px-3.5 lg:px-6 font-semibold overflow-hidden bg-[linear-gradient(90deg,#0FA1DB,#5C2D91,#0FA1DB)] bg-size-[200%_200%] bg-left transition-[background-position] duration-500 ease-in-out hover:bg-right cursor-pointer lg:text-xl">Send Message</button>
            </div>
        </div>
    </section>

    <!-- * GIRIRAJ DIGITAL at World Wide -->
    <section class="section-container grid grid-cols-12 gap-5 lg:gap-[30px]">
        <div class="col-span-12 lg:col-start-2 lg:col-span-10 flex flex-col space-y-[30px] lg:space-y-[60px]">
            <SectionTitle Title="Our Global Locations" Heading="GIRIRAJ DIGITAL at World Wide"  />
            <div class="order-2 lg:order-1 grid grid-col-1 md:grid-cols-2 xl:grid-cols-3 gap-5 lg:gap-[30px]">
            {
                Location.map((location:any) => (
                <button
                    type="button"
                    data-id={location.id}
                    data-map={location.mapSrc}
                    class="location-card cursor-pointer flex text-left rounded-xl lg:rounded-[20px] p-6 space-x-6 border-4 border-[#E9F2FC] transition-all"
                >
                    <div class="flex flex-col space-y-6 justify-between">
                        <img src={location.Image.src} class="w-fit h-fit" alt={location.Name} />
                        <p class="font-semibold lg:text-lg">{location.Name}</p>
                    </div>

                    <div class="space-y-4 text-[#212529]">
                        <p class="font-medium">{location.Location}</p>
                        <div class="flex flex-col font-semibold">
                            <div class="flex space-x-1 items-center">
                                <img class="w-fit h-fit" src={Call.src} alt="call" />
                                <a class="text-[15px]" href={`tel:${location.Contact}`}>{location.Contact}</a>
                            </div>
                            <div class="flex space-x-1 items-center">
                                <img class="w-fit h-fit" src={Email.src} alt="call" />
                                <a class="text-[15px]" href="mailto:info@girirajdigital.com">info@girirajdigital.com</a>
                            </div>
                        </div>
                    </div>
                </button>
                ))
            }
            </div>

            <div class="order-1 mb-10 lgmb-0 lg:order-2 rounded-2xl p-5 lg:p-[60px] bg-[url('../assets/images/map-bg.webp')] bg-cover">
                <div class="bg-white rounded-xl lg:rounded-[20px] outline-3 lg:outline-8 outline-[rgba(255,255,255,0.6)]">
                    <iframe
                    id="mapFrame"
                    src={Location[0].mapSrc}
                    height="480"
                    class="w-full rounded-[20px]"
                    allowfullscreen
                    referrerpolicy="no-referrer-when-downgrade"
                    ></iframe>
                </div>
            </div>
        </div>

    </section>


<!-- * Location JS -->
<script is:inline>
    const cards = document.querySelectorAll(".location-card");
    const mapFrame = document.getElementById("mapFrame");

    function setActive(card) {
        cards.forEach(c => {
        c.classList.remove("border-[#003E87]");
        c.classList.add("border-[#E9F2FC]");
        });

        card.classList.remove("border-[#E9F2FC]");
        card.classList.add("border-[#003E87]");

        mapFrame.src = card.dataset.map;
    }

    // Default select INDIA
    setActive(cards[0]);

    cards.forEach(card => {
        card.addEventListener("click", () => setActive(card));
    });
</script>

<!-- * File Input JS -->
<script>
  // Handle file input
    const fileInput = document.getElementById('file-input') as HTMLInputElement;
    const fileName = document.getElementById('file-name');

    if (fileInput && fileName) {
        fileInput.addEventListener('change', (e) => {
        const target = e.target as HTMLInputElement;
        const file = target.files?.[0];
        fileName.textContent = file ? file.name : 'No File Chosen';
        });
    }

    // Handle form submission
    const form = document.getElementById('contact-form') as HTMLFormElement;
    
    if (form) {
        form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        console.log('Form submitted:', data);
        
        // Add your form submission logic here
        // For example: send to an API endpoint
        
        alert('Message sent successfully!');
        form.reset();
        if (fileName) fileName.textContent = 'No File Chosen';
        });
    }
</script>

</Layout>